{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "nodenext",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["@types/node", "vitest/globals"],
    "lib": ["dom", "ES2018"],
    "module": "NodeNext",
    "target": "ES2018",
    "outDir": "./dist",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "#interruptions": ["src/interruptions"]
    }
  },
  "include": ["src/**/*"],
  "types": ["@types/node"],
  "exclude": ["node_modules"]
}
